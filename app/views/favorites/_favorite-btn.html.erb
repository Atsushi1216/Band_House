 <% if music.favorited_by?(current_user) %>
    <p>
      <%= link_to music_favorites_path(music), method: :delete, remote: true do %>
        ♥<%= music.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to music_favorites_path(music), method: :post, remote: true do %>
        ♡<%= music.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>