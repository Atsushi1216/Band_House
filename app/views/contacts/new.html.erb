<div class="container">
  <div class="row">
    <div class="mx-auto" >
      <div class="mx-auto">
        <h2 class="field form-group row">
          <div class="mx-auto">
            お問い合わせフォーム
          </div>
        </h2>
    <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
      <div class="field form-group row">
        <div class="mx-auto col-md-12 mb-3">
          <%= f.label :お名前 , class:"form-label" %>
          <%= f.text_field :name, autofoucus: true, class:"form-control",required: true %>
        </div>
      </div>
      <div class="field form-group row">
        <div class="mx-auto col-md-12 mb-3">
        <%= f.label :メールアドレス, class:"form-label" %>
        <%= f.email_field :email, autofoucus: true, class:"form-control",required: true %>
        </div>
      </div>
      <div class="field form-group row">
        <div class="mx-auto col-md-12 mb-5">
          <%= f.label :お問い合わせ内容, class:"form-label" %>
          <%= f.text_area :message, size: '20x10', autofoucus: true, class:"form-control",required: true %>
        </div>
      </div>
      <div class="container ">
        <div class="row">
          <div class="mx-auto" >
            <div class="actions">
              <%= f.submit "送信", class: "btn form-button" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>