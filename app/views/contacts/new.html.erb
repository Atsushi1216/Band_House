<div class="container">
  <div class="row">
    <h2>
      お問い合わせフォーム
    </h2>
    <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :お名前 %>
        <%= f.text_field :name, autofoucus: true %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofoucus: true %>
      </div>
      <div class="form-group">
        <%= f.label :お問い合わせ内容 %>
        <%= f.text_area :message, size: '10x10', autofoucus: true %>
      </div>
      <div>
        <%= f.submit "送信" %>
      </div>
    <% end %>
  </div>
</div>