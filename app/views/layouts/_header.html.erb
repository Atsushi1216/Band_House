<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <div class="col-2">
                <h1><%= link_to image_tag("logo.png", height:"100px"), root_path, class:"header-logo" %></h1>
            </div>
            <div class="col-3 search-form">
                 <% if user_signed_in? %>
                    <%= form_tag(search_path, method: :get) do %>
                        <%= text_field_tag (:word) %>
                　　      <%= select_tag 'range' ,options_for_select([['User', '1'], ['Music', '2']]) %>
                   　    <%= select_tag 'search', options_for_select([ ["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
                   　    <%= submit_tag "検索" %>
                    <% end %>
                <% end %>
            </div>
            <div class="col-2">
                <span class="navbar-text">
                    <% if user_signed_in? %>
                        ようこそ<%= current_user.name %>さん
                    <% end %>
                </span>
            </div>
            <div class="col-5　ml-auto">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse ml-auto" id="navbarNavDropdown">
                    <ul class="navbar-nav  ml-auto">
                        <% if user_signed_in? %>
                          <li><%= link_to ' My Page', current_user, class: ' nav-link text-body' %></li>
                          <li><%= link_to ' Log Out', destroy_user_session_path, method: :delete,class: 'nav-link text-body' %></li>
                          <li><%= link_to ' New Post', new_music_path, class: ' nav-link text-body' %></li>
                        <% else %>
                          <li><%= link_to ' Sigh Up', new_user_registration_path,class: 'nav-link text-body text-body' %></li>
                          <li><%= link_to ' Log In', new_user_session_path ,class: 'nav-link text-body'%></li>
                        <% end %>
                          <li><%= link_to ' Music', musics_path ,class: 'nav-link text-body'%></li>

                  </ul>
                </div>
            </div>
        </div>
    </nav>
</header>