    <p>ユーザーネーム：<%= link_to music.user.name, user_path(music.user_id) %></p>
    <p>タイトル：<%= link_to music.title,  music_path(music.id) %></p>
    <p>ジャケット写真など： <%= link_to music_path(music.id) do %>
    <%= attachment_image_tag(music, :song_image, :fill, 50, 50, ) %>
    <% end %></p>
    <p>説明：<%= music.caption %></p>
    <p>再生：<audio src= "<%= "#{music.song}" %>" controls=""></audio></p>
     <p><%= link_to "#{music.comments.count} コメント", music_path(music.id) %></p>
    <% if music.user == current_user %>
    <%= link_to "削除", music_path(music), method: :delete %>
    <% end %>
  </div>
<% end %>


