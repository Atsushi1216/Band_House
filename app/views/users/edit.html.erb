<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="mx-auto">
        <h2>プロフィール編集</h2>
      </div>
      <div class="container form-contents">
        <%= form_with model:@user, local:true do |f| %>

          <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <label for="inputName">お名前</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>
          </div>
         <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <label for="inputImage">プロフィール画像</label>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

            </div>
          </div>
          <div class="field form-group row">
            <div class="mx-auto col-md-12 mb-6">
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "変更を保存",class:"form-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>