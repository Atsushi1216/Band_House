<h4 class="mx-auto">
  <% if @user.errors.any? %>
    <Strong><%= @user.errors.count %>  errors occur!  :</Strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</h4>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="mx-auto">
        <h2>プロフィール編集</h2>
      </div>
      <div class="container form-contents mt-4">
        <%= form_with model:@user, local:true do |f| %>

          <div class="field form-group row">
            <div class="col-md-12 mb-6 mt-3">
              <label for="inputName">お名前　</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>
          </div>
          <div class="field form-group row">
            <div class="col-md-12 mb-6 mt-3">
              <label for="inputName">自己紹介　</label>
              <%= f.text_field :introduction, size: "30x3", autofocus: true,  placeholder:"自己紹介"%>
            </div>
          </div>
         <div class="field form-group row">
            <div class="col-md-12 mb-6 mt-3">
              <label for="inputImage">プロフィール画像　</label>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </div>
          </div>
          <div class="actions mt-5">
            <%= f.submit "変更を保存",class:"btn btn-primary btn-xl" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>