<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロワー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-100 mb-3">
        <%= link_to user_path(user) do %>
        <p class="caption h4"><%= user.name %></p>
        <div class="d-flex">
          <%= attachment_image_tag user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg", class: "mb-3 mt-3 ml-3 profile-img" %>
          <h6 class="ml-5"><%= user.introduction %></h6>
          <br>
          <br>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @users %>
  </div>
</div>