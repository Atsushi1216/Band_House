<div class="container">
  <div class="row">
    <div class="mainContents col-sm-12 col-sm-push-4 col-md-12 col-md-push-4">
      <h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field form-group row">
      <div class="col-md-12 mb-6">
        <%= f.label :name, class:"form-label" %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control", required: true %>
      </div>
    </div>

    <div class="field form-group row">
      <div class="col-md-12 mb-6">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true %>
      </div>
    </div>

   <div class="field form-group row">
      <div class="col-md-12 mb-6">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control", required: true%>
      </div>
    </div>

    <div class="field form-group row">
      <div class="col-md-12 mb-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", required: true %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:"form-button" %>
    </div>
      <% end %>
        <div class="form-comment text-right">
          <span>既に登録済みの方</span>
          <span><%= render "devise/shared/links" %></span>からログインしてください。
        </div>
      </div>
    </div>
  </div>
</div>