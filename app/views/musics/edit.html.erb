<h1>Misic Editページ</h1>
  <%= form_with model: @music, local:true do |f| %>
    <h4>曲名</h4>
      <%= f.text_field :title, class:"form-control" %>
    <h4>説明</h4>
      <%= f.text_field :caption, class:"form-control" %>
    <h4>ジャケット写真</h4>
      <%= f.attachment_field :song_image, class:"form-control"  %>
    <h4>曲の選択</h4>
      <%= f.file_field :song , :size => 140, class:"form-control"  %></br>
    <%= f.submit "曲を更新する", class: "btn btn-success" %>
  <% end %>
  <%= link_to "曲詳細に戻る", music_path(@music.id) %><span> |</span>
  <%= link_to "曲一覧に戻る", "/musics" %>
