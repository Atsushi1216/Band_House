<div class="container">
  <div class="row">
   <div class="mainContents col-sm-9 col-sm-push-3 col-md-9 col-md-push-3">
   <h2>Results index</h2>
<!--musics一覧 -->
<table class="table table-hover table-inverse">
　<% if @range == '2' %>
  <thead>
    <tr>
     <th></th>
     <th>曲名</th>
     <th>説明</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @music.each do |music| %>
     <tr>
      <td>
       <%= link_to(music.user) do %>
       <%= attachment_image_tag(music.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
       <% end %>
      </td>
      <td>
       <%= link_to music.title, music, class: "music_#{music.id}" %>
      </td>
      <td><%= music.caption %></td>
     </tr>
     <% end %>
  </tbody>

  <% else %>
  <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>
   </div>
  </div>
 </div>